{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for room in rooms %}
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">{{ room.name }}</div>
                        <div class="panel-body">
                            <table class="table">
                                <tbody>
                                    {% for hour in 6..23 %}
                                        {% for minute in 0..3 %}
                                            <tr>
                                                <td>
                                                    {{ hour }}:{{ "%02d"|format(minute * 15) }}
                                                </td>
                                                <td>
                                                    Test
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="panel-footer">{{ room.description }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}