{% extends 'base.html.twig' %}

{% block body %}
    <h1>Roomreservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ roomReservation.id }}</td>
            </tr>
            <tr>
                <th>Startdatetime</th>
                <td>{% if roomReservation.startdatetime %}{{ roomReservation.startdatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddatetime</th>
                <td>{% if roomReservation.enddatetime %}{{ roomReservation.enddatetime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('roomreservation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('roomreservation_edit', { 'id': roomReservation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
