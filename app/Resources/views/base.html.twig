<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
            <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
        {% endblock %}
        {% block javascriptsinclude %}
            <script src="{{ asset('js/main.js') }}"></script>
            <script src="{{ asset('js/jquery-3.1.1.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="//code.jquery.com/ui/1.11.3/jquery-ui.js"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block navigation %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- {{ dump(app.user) }} -->
                    
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="#">
                          <img alt="Brand" style="height: 50px;" src="{{ asset('images/logo.jpg') }}">
                      </a>
                    </div>
                    
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            {% if app.user == null %}
                                <li class="active"><a href="/login">Login</a></li>
                            {% else %}
                                <li class="active"><a href="/room/list">Rooms <span class="sr-only">(current)</span></a></li>
                                <li id="roomreservation"><a href="/roomreservation">Room Reservation</a></li>
                                <li id="admin" class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li id="roomreservationlist"><a href="/roomreservation/list">Room Reservation List</a></li>
                                        <li id="roomreservationapprovelist"><a href="/roomreservation/listapprove">Room Reservation Approval</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="/register">Add User</a></li>
                                        <li><a href="/room/registration">Add Room</a></li>
                                        <li><a href="/roomdefaultreservation/">Add Room Default Reservation</a></li>
                                        
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile <span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="/profile"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Profile</a></li>
                                        <li><a href="/logout">Logout</a></li>
                                    </ul>
                                </li>
                            {% endif %}
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        {% endblock %}
        
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
