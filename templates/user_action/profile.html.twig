{% extends 'base.html.twig' %}

{% block title %}Benutzerprofil{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        /*
         over-ride "Weak" message, show font in dark grey
         */

        .progress-bar {
            color: #333;
        }

        /*
        Reference:
        http://www.bootstrapzen.com/item/135/simple-login-form-logo/
        */

        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            outline: none;
        }

        .form-control {
            position: relative;
            font-size: 16px;
            height: auto;
            padding: 10px;
        @include box-sizing(border-box);

        &:focus {
             z-index: 2;
         }
        }

        body {
            background: url({{ asset('images/bg.png') }}) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        .login-form {
            margin-top: 60px;
        }

        .user-content-block {
            color: #5d5d5d;
            background: #fffefc;
            padding: 26px;
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
        }
        .user-content-block > div {
            text-align: center;
        }

        .user-content-block-links {
            text-align: center;
            margin-top: 1em;
            margin-bottom: 50px;
        }
        .user-content-block-links a {
            color: #fff;
        }
    </style>
    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">

            <h1>Benutzerprofil {{ userext.fullName }}</h1>

            <div class="user-content-block">

                Name: {{ userext.fullName }}<br>
                Username: {{ userext.username }}<br>
                E-Mail: {{ app.user.email }}<br>
                <br>
                <p><a class="btn btn-primary" href="{{ path('user_action_change_password') }}" role="button">Passwort Ã„ndern</a></p>

            </div>

        </div>
    </div>
{% endblock %}